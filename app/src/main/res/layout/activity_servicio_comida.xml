<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    android:contentDescription="@string/app_name">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:clickable="false"
            android:text="Servicio a la habitacion"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="Seleccione una opcion"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="629dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="166dp"
                    android:layout_height="149dp"
                    app:srcCompat="@mipmap/desayuno" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="                       Desayuno " />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="246dp"
                        android:layout_height="113dp"
                        android:text="                                                               Puede escoger entre 3 menus de desayuno, sin gluten, vegano o un desayuno clasico, seleccione para mas informacion."
                        android:textSize="16sp" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="27dp"
                    android:orientation="horizontal" />

                <Button
                    android:id="@+id/button20"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seleccionar" />

                <Space
                    android:layout_width="97dp"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="138dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="168dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/almuerzo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="                       Almuerzo" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="245dp"
                        android:layout_height="112dp"
                        android:text="Contamos con variados platillos, el menu principal consta de aperitivo, entrada, principal y postre a eleccion, seleccione para mas informacion."
                        android:textSize="16sp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="130dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="102dp"
                        android:layout_height="41dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <Button
                    android:id="@+id/button22"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seleccionar" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="87dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="104dp"
                    android:layout_height="115dp"
                    app:srcCompat="@mipmap/cenaespecial" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="                    Especial" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="234dp"
                        android:layout_height="94dp"
                        android:text="El especial, es una cena romantica para 2 personas, con un buffet y bar abierto, seleccione para mas informacion." />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="130dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="102dp"
                        android:layout_height="41dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <Button
                    android:id="@+id/button23"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seleccionar" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="28dp" />


            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>